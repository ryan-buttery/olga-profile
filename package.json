{
  "name": "olga-english-teaching",
  "version": "1.0.0",
  "description": "Modern Bootstrap website for English teaching services",
  "main": "index.html",
  "scripts": {
    "sass": "sass assets/scss/style.scss assets/css/style.css",
    "sass:watch": "sass --watch assets/scss/style.scss:assets/css/style.css",
    "build": "npm run sass",
    "docker:build": "docker build -t olga-english-website .",
    "docker:build:simple": "npm run build && docker build -f Dockerfile.simple -t olga-english-website .",
    "docker:run": "docker run -p 3000:8080 --name olga-english --rm olga-english-website",
    "docker:run:detached": "docker run -d -p 3000:8080 --name olga-english olga-english-website",
    "docker:stop": "docker stop olga-english && docker rm olga-english",
    "docker:compose": "docker-compose up -d",
    "docker:compose:down": "docker-compose down",
    "docker:compose:logs": "docker-compose logs -f",
    "start": "npm run docker:compose",
    "stop": "npm run docker:compose:down"
  },
  "keywords": [
    "english",
    "teaching",
    "bootstrap",
    "sass",
    "website"
  ],
  "author": "Olga",
  "license": "ISC",
  "devDependencies": {
    "sass": "^1.69.0"
  }
}